<head>
    @model IEnumerable<Shop.ModelsDto.ProductDto>
        @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
        @{
            ViewData["Title"] = "GetAllProducts";
        }
    </head>

<body>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <div class="header">
        <div class="row align-items-center">
            <div class="col">
                <h1>All Products in the store</h1>
            </div>
            <div class="col">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="32"
                     height="32"
                     fill="currentColor"
                     class="bi bi-basket3-fill"
                     viewBox="0 0 16 16">
                    <path d="M5.757 1.071a.5.5 0 0 1 .172.686L3.383 6h9.234L10.07 1.757a.5.5 0 1 1 .858-.514L13.783 6H15.5a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-1A.5.5 0 0 1 .5 6h1.717L5.07 1.243a.5.5 0 0 1 .686-.172zM2.468 15.426.943 9h14.114l-1.525 6.426a.75.75 0 0 1-.729.574H3.197a.75.75 0 0 1-.73-.574z" />
                </svg>
            </div>
        </div>
        <div class="create">
            <a asp-action="CreateProductView">Create Product</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreateAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="EditProductView" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="GetOneProduct" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="DeleteProductView" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</body>

    <style>
        .row {
            padding: 10px;
        }

        .footer {
            background-color: #f1f1f1;
            padding: 10px;
            text-align: center;
        }

        .header {
            background-color: #f1f1f1;
            padding: 30px;
            text-align: center;
            font-size: 35px;
        }

        .create {
            overflow: auto;
            font-size: 20px;
            margin-left: 1000px;
        }

        .bi bi-basket3-fill {
            margin-right: 100px;
        }

        .col {
            margin-left: 220px;
        }
    </style>